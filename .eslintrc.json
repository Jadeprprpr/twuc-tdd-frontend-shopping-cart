{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-double"],
        "max-len": ["error", { "code": 80 }],
        "indent": ["error", 4]
    },
    "overrides": [
        {
            "files": ["./test/*"],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}
